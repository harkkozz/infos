{
  "name": "infos-be",
  "version": "1.0.0",
  "description": "",
  "main": "main.ts",
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.7.4",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write src",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:tsc": "tsc --project tsconfig.json",
    "lint:ts-coverage": "type-coverage",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "typeorm:migration-run": "npm run typeorm migration:run -- -d src/config/db/typeOrm.config.ts",
    "typeorm:migration-generate": "npm run typeorm -- -d src/config/db/typeOrm.config.ts migration:generate src/config/db/migrations/migration",
    "typeorm:migration-create": "npm run typeorm -- migration:create src/config/db/new-migrations/migration",
    "typeorm:migration-revert": "npm run typeorm -- -d src/config/db/typeOrm.config.ts migration:revert"
  },
  "author": "Haris Adilovic",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.7.1",
    "@nestjs/apollo": "^12.0.7",
    "@nestjs/common": "^10.1.3",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.1.3",
    "@nestjs/graphql": "^12.0.8",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.1.3",
    "@nestjs/typeorm": "^10.0.0",
    "@types/bcrypt": "^5.0.0",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "graphql": "^16.6.0",
    "graphql-ws": "^5.14.0",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "^3.6.0",
    "nodemailer": "^6.9.2",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "slugify": "^1.6.6",
    "ts-node": "^10.9.1",
    "typeorm": "0.3.17",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.11",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.1.3",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.1.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "10.9.1",
    "tsconfig-paths": "^4.2.0",
    "type-coverage": "^2.26.2",
    "typescript": "5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
